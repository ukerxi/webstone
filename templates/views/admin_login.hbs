<!DOCTYPE html>
<html lang="en">
<head>
  {{>header}}
  <style type="text/css">
    html, body{
      width: 100%;
      height: 100%;
      overflow: hidden;
      position: relative;
    }
    #particles {
      position: absolute;
      top: 0;
      z-index: -1;
      width: 100%;
      height: 100%;
    }
    .view-login{
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      font-size: 14px;
      color: #333;
    }
    .login-wrap{
      position: absolute;
      top: 50%;
      left: 50%;
      width: 442px;
      padding: 40px;
      margin-top: -100px;
      margin-left: -200px;
      border: solid 1px #ddd;
      text-align: center;
      -webkit-border-radius: 4px;
      border-radius: 4px;
      background-color: #fff;
    }
    .control-group{
      display: inline-block;
      vertical-align: middle;
      width: 250px;
    }
    .control-group input{
      display: inline-block;
      vertical-align: middle;
      border: solid 1px #ddd;
      width: 200px;
      height: 20px;
      line-height: 20px;
      background-color: #fff !important;
      padding: 4px 6px;
    }
    .control-group input:FIRST-CHILD{
      margin-bottom: 20px;
    }
    .control-btn{
      display: inline-block;
      vertical-align: middle;
      width: 100px;
    }
    .control-btn .btn-common{
      display: inline-block;
      padding: 32px;
      text-align: center;
      color: #fff;
      text-decoration: none;
      background-color: #0f88eb;
      -webkit-border-radius: 4px;
      border-radius: 4px;
    }
    .control-btn .btn-common:hover{
      text-decoration: none;
      background-color: #0D7CD8;
    }
  </style>
</head>
<body>
  <div id="body">
    <div class="view-login" >
      <div class="login-wrap">
        <div class="control-group">
          <input type="text" id="login_account" autocomplete="off" placeholder="请输入登录账号">
          <input type="password" id="login_password" placeholder="请输入登录密码">
        </div>
        <div class="control-btn">
          <a href="javascript:void(0);" class="btn-common" id="btn_login">登录</a>
        </div>
      </div>
    </div>
  </div>
</body>
{{>footer}}
<script type="text/javascript">
  $(document).keypress(function(e) {
    if(e.which == 13) {
      $("#btn_login").click();
    }
  });

  $("#btn_login").on("click", function(){
    var accountName = $("#login_account").val();
    var password = $("#login_password").val();
    if (!accountName || !password) {
      alert("账号名或密码不能为空！");
      return ;
    }
    $.controlCon.remoteCall({
      url: "/api/user/login",
      type: "POST",
      data: {
        account: accountName,
        password: password,
      }
    }, function(res) {
      if (res.code === '0000') {
        alert('登录成功');
        setTimeout(function () {
          window.location.href = '/admin'
        }, 2000);
      }
    });
